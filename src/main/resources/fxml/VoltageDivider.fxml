<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.calculator.ui.VoltageDividerController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="10" alignment="CENTER" layoutX="20" layoutY="20" prefWidth="560">
        <Label text="Калькулятор делителя напряжения" style="-fx-font-size: 18px;"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Vin:"/>
            <TextField fx:id="vinField" promptText="Входное напряжение"/>
            <Label text="Vout:"/>
            <TextField fx:id="voutField" promptText="Требуемое напряжение"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Отклонение (%):"/>
            <TextField fx:id="toleranceField" promptText="например, 1"/>
            <Label text="Ряд:"/>
            <ChoiceBox fx:id="seriesChoice"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Rmin (Ом):"/>
            <TextField fx:id="rminField" promptText="100"/>
            <Label text="Rmax (Ом):"/>
            <TextField fx:id="rmaxField" promptText="1000000"/>
        </HBox>

        <Button text="Рассчитать" onAction="#handleCalculate"/>

        <TableView fx:id="resultTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="resistorsCol" text="Резисторы"/>
                <TableColumn fx:id="voutCol" text="Vout"/>
                <TableColumn fx:id="errorCol" text="Ошибка (%)"/>
            </columns>
        </TableView>

        <Button text="Назад в меню" onAction="#goBack"/>
    </VBox>
</AnchorPane>

