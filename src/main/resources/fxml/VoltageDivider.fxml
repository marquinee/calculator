<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.calculator.ui.VoltageDividerController"
            prefWidth="500" prefHeight="400">
    <children>
        <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="40" prefWidth="400">
            <Label text="Калькулятор делителя напряжения" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="Входное напряжение (Vin):"/>
                <TextField fx:id="vinField"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Требуемое напряжение (Vout):"/>
                <TextField fx:id="voutField"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Допустимое отклонение (%):"/>
                <TextField fx:id="toleranceField"/>
            </HBox>

            <Button text="Рассчитать" onAction="#calculate"/>
            <Label fx:id="resultLabel" textFill="blue"/>
            <Button text="Назад в меню" onAction="#goBack"/>
        </VBox>
    </children>
</AnchorPane>

