<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.calculator.ui.RegisterController"
            prefWidth="400" prefHeight="300">

    <children>
        <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300">
            <Label text="Регистрация" style="-fx-font-size: 16px;"/>
            <TextField fx:id="usernameField" promptText="Имя пользователя"/>
            <PasswordField fx:id="passwordField" promptText="Пароль"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Повторите пароль"/>
            <Button text="Зарегистрироваться" onAction="#handleRegister"/>
            <Button text="Назад к входу" onAction="#goToLogin"/>
            <Label fx:id="messageLabel" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
