<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.calculator.ui.HistoryController"
            prefWidth="600" prefHeight="400">
    <children>
        <VBox spacing="10" layoutX="30" layoutY="30" prefWidth="540">
            <Label text="История вычислений" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TableView fx:id="historyTable" prefHeight="300">
                <columns>
                    <TableColumn text="ID" prefWidth="50"/>
                    <TableColumn text="Пользователь" prefWidth="100"/>
                    <TableColumn text="Тип операции" prefWidth="150"/>
                    <TableColumn text="Результат" prefWidth="150"/>
                    <TableColumn text="Дата" prefWidth="100"/>
                </columns>
            </TableView>
            <Button text="Назад в меню" onAction="#goBack"/>
        </VBox>
    </children>
</AnchorPane>

