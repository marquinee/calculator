<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.canvas.Canvas?>
<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.calculator.ui.OhmsLawController" spacing="20" alignment="CENTER">
    <!-- Левая часть: поля ввода -->
    <VBox spacing="10" alignment="TOP_LEFT">
        <Label text="Закон Ома" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <HBox spacing="5">
            <Label text="Напряжение (В):"/>
            <TextField fx:id="voltageField"/>
        </HBox>

        <HBox spacing="5">
            <Label text="Ток (А):"/>
            <TextField fx:id="currentField"/>
        </HBox>

        <HBox spacing="5">
            <Label text="Сопротивление (Ω):"/>
            <TextField fx:id="resistanceField"/>
        </HBox>

        <Button text="Рассчитать" onAction="#calculate"/>
        <Button text="Назад" onAction="#goBack"/>

        <Label fx:id="resultLabel" style="-fx-text-fill: darkblue; -fx-font-weight: bold;"/>
    </VBox>

    <!-- Правая часть: схема -->
    <Canvas fx:id="diagramCanvas" width="400" height="300"/>
</HBox>


