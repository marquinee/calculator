<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.calculator.ui.OhmsLawController"
            prefWidth="400" prefHeight="300">
    <children>
        <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="40" prefWidth="300">
            <Label text="Калькулятор: Закон Ома" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="Напряжение (V):"/>
                <TextField fx:id="voltageField"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Ток (I):"/>
                <TextField fx:id="currentField"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Сопротивление (R):"/>
                <TextField fx:id="resistanceField"/>
            </HBox>

            <Button text="Рассчитать" onAction="#calculate"/>
            <Label fx:id="resultLabel" textFill="blue"/>
        </VBox>
    </children>
</AnchorPane>

